{
	"manifest_version": 2,
	"name": "拡張名てすと",
	"description": "拡張の説明文",
	"version": "1.0",
	"icons": {
		"256": "images/icon/icon_256.png"
	},
	"background": {
		"scripts": [
			"webroot/js/jquery/2.2.0/jquery-2.2.0.min.js",
			"webroot/js/background.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {
			"256": "images/icon/icon_256.png"
		},
		"default_title": "拡張名てすと",
		"default_popup": "webroot/popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"css": [
				"webroot/css/contents_style.css"
			],
			"js": [
				"webroot/js/main.js"
			]
		}
	],
	"permissions": [
		"tabs",
		"https://*/*",
		"http://*/*",
		"storage",
		"webNavigation"
	]
}
